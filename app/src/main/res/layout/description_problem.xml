<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<include
    layout="@layout/toolbar_description_problem"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/description_problem_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/pasport" />

            <EditText
                android:id="@+id/description_problem_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="Тема"
                android:singleLine="true" />

            <EditText
                android:id="@+id/description_problem_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="Краткое описание проблемы"
                android:singleLine="true" />

            <EditText
                android:id="@+id/description_problem_full_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="Полное описание проблемы" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/description_problem_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_weight="1"
        android:hint="Количество денег для сбора"
        android:inputType="phone"
        android:singleLine="true" />
    <Spinner
        android:id="@+id/spinnerstate"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>


            <TextView
                android:id="@+id/description_problem_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:onClick="onclick"
                android:hint="Количество дней для сбора"
                android:inputType="phone"
                android:singleLine="true" />
            <EditText
                android:id="@+id/description_problem_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:inputType="phone"
                android:hint="Номер расчетного счета Приватбанка"
                android:singleLine="true" />

            <Button
                android:id="@+id/description_problem_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/page3_checkBox"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Разместить обьявление" />
        </LinearLayout>


    </ScrollView>
    <FrameLayout
        android:id="@+id/container1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>