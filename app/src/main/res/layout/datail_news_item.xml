<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fdf"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_news_theme"
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:text="Medium Text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/datail_news_like"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBaseline="@+id/detail_news_theme"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/nolike"
                android:focusable="false"
                android:textOff=""
                android:textOn="" />


        <ImageView
            android:id="@+id/detail_news_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_news_theme"
            android:layout_centerHorizontal="true" />


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/detail_news_image"
            android:background="@color/blue_grey"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_news_summa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="7000$"
                android:textColor="@color/white"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/detail_news_days_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/detail_news_summa"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="14"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>


    </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>


