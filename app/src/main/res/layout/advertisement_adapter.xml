<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fdf"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        card_view:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        <Button
            android:id="@+id/advertisement_adapter_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/advertisement_adapter_theme"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_pencil"
            android:focusable="false"

            />
        <TextView
            android:id="@+id/advertisement_adapter_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="20dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/advertisement_adapter_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/advertisement_adapter_theme"
                android:layout_centerHorizontal="true" />


            <RelativeLayout
            android:id="@+id/advertisement_adapter_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/advertisement_adapter_image"
                android:background="@color/blue_grey"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/advertisement_adapter_summa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="7000$"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/advertisement_adapter_days_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="14"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>

