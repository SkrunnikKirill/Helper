<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/advertisement_adapter_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Small Text" />

        <ImageView
            android:id="@+id/advertisement_adapter_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/advertisement_adapter_date_text"
            android:src="@drawable/test" />
        <TextView
            android:id="@+id/advertisement_adapter_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/advertisement_adapter_image"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <ProgressBar
            android:id="@+id/advertisement_adapter_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advertisement_adapter_theme"
            android:background="#4caf50" />

        <RelativeLayout
            android:id="@+id/advertisement_adapter_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advertisement_adapter_progressBar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/advertisement_adapter_summa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7000$"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/advertisement_adapter_persent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="60%"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/advertisement_adapter_days_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="14"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/advertisement_adapter_relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advertisement_adapter_relativeLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="необходимо" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="собрано" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="недели осталось" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>