<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/login_first_relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/secondbackground">


    <RelativeLayout
        android:id="@+id/login_second_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/relative_marginTop"
        android:padding="@dimen/padding_login">

        <LinearLayout
            android:id="@+id/login_first_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_cover_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/email"
                tools:ignore="ContentDescription"/>


            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:background="@drawable/divider"
                android:hint="@string/email"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:padding="9dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:ignore="Deprecated,RtlHardcoded"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/login_second_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_first_linear_layout"
            android:layout_marginTop="@dimen/blocks_marginTop"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_key_image"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:src="@drawable/password"
                tools:ignore="ContentDescription"/>


            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_weight="5"
                android:background="@drawable/divider"
                android:hint="@string/password"
                android:inputType="textPassword|textNoSuggestions"
                android:padding="9dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded"/>

        </LinearLayout>

        <Button
            android:id="@+id/login_button_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_second_linear_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/button_marginTop"
            android:background="@drawable/button_sign_in"
            android:gravity="center"
            android:text="@string/sign_in"
            android:textColor="#F8F8FF"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>
