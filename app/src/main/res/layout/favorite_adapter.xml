<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorite_adapter_cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/favorite_adapter_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Small Text" />


        <ImageView
            android:id="@+id/favorite_adapter_detail_news_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/favorite_adapter_date_text"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/favorite_adapter_detail_news_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/favorite_adapter_detail_news_image"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <RelativeLayout
            android:id="@+id/favorite_adapter_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favorite_adapter_detail_news_theme"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/favorite_adapter_detail_news_summa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7000$"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/favorite_adapter_detail_news_days_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="14"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favorite_adapter_relativeLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="необходимо" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="недели осталось" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>


