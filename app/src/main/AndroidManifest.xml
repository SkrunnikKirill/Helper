<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alex.helppeopletogether">

    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:name=".registration.VkApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".registration.Login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".registration.Registration"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".registration.Agreement"

            android:label="Соглашение"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".fragmentsFormNavigationDrawer.NewsNavigationDrawer"
            android:label="@string/title_activity_news_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".fragmentsFormNavigationDrawer.NewsDeatils"
            android:label="NewsDeatils" />
        <activity
            android:name=".fragmentsFormNavigationDrawer.NextPostAdvertisementFragment"
            android:label="NextPostAdvertisementFragment" />
        <activity
            android:name=".fragmentsFormNavigationDrawer.DescriptionProblem"
            android:label="DescriptionProblem" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

    </application>

</manifest>
